<assembly>
    <id>bundle-resources</id>
    <formats>
        <format>jar</format>
    </formats>
    <baseDirectory>.</baseDirectory>

    <fileSets>
        <fileSet>
            <directory>${project.build.outputDirectory}</directory>
            <outputDirectory>.</outputDirectory>
            <filtered>false</filtered>
            <includes>
                <include>**</include>
            </includes>
            <excludes>
                <exclude>etc/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>

</assembly>
